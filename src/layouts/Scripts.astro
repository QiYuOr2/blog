<script>
const color = localStorage.getItem(import.meta.env.PUBLIC_COLOR_MODE) ?? ''
if (['dark', 'light'].includes(color)) {
  document.documentElement.classList.add(color)
  document.documentElement.style.colorScheme = color
} else {
  const media = window.matchMedia('(prefers-color-scheme: dark)')
  document.documentElement.classList.add(media.matches ? 'dark' : 'light')
}
</script>


